@{
    Layout = null;
    ViewData["Title"] = "SignUp";
}

@model EntityLayer.ViewModels.SignUpViewModel

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Moodify | Sign Up</title>
    <link rel="stylesheet" href="/css/StyleSheet.css">

</head>
<body>
    <div id="wrapper">
        <div id="left">
            <div id="signin">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-info" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div asp-validation-summary=ModelOnly class="error animated tada" id="msg" role="alert">
                </div>
                <form asp-controller="Home" asp-action="SignUp" asp-route-returnUrl="@Context.Request.Query["returnURl"]" method="post">
                    <div>
                        <label>Username</label>
                        <input asp-for="UserName" type="text" placeholder="User Name" class="text-input"/>
                        <span asp-validation-for="UserName" class="text-danger" style="color: red"></span>
                    </div>
                    <div>
                        <label>Email</label>
                        <input asp-for="Email" type="email" placeholder="Email" class="text-input" />
                        <span asp-validation-for="Email" class="text-danger" style="color: red"></span>
                    </div>
                    <div>
                        <label>Password</label>
                        <input asp-for="Password" type="password" class="text-input" />
                        <span asp-validation-for="Password" class="text-danger" style="color: red"></span>
                    </div>
                    <div>
                        <label>Password Confirm</label>
                        <input asp-for="PasswordConfirm" type="password" class="text-input" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger" style="color: red"></span>
                    </div>
                    <button type="submit" class="primary-btn">Sign Up</button>
                </form>
                <a asp-action="SignIn" asp-controller="Home" class="secondary-btn">Do you have an account? Sign In</a>
            </div>
        </div>
        <div id="right">
            <div id="showcase">
                <div class="showcase-content">
                    <h1 class="showcase-text">
                        Welcome <strong>Moodify!</strong>
                    </h1>
                    <h2>Let's create the future together</h2>
                </div>
            </div>
        </div>
    </div>
    <!-- partial -->

</body>
</html>