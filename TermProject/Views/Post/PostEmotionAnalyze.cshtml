@{
    ViewData["Title"] = "PostEmotionAnalyze";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

@model List<EntityLayer.Model.EmotionSummary>

<h1>Post Emotion Analyze</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header">
                <h4 class="card-title"></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table tablesorter " id="">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    Emotion
                                </th>
                                @* <th>
                                Month
                                </th>*@
                                <th class="text-center">
                                    Post Count
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var summary in Model)
                            {
                                <tr>
                                    <td>@summary.Emotion</td>
                                    <td class="text-center">@summary.PostCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>